{
  "name": "floating-notes",
  "displayName": "floating notes",
  "description": "Allows for notes for github repos that aren't tied to a particular branch and don't clog up the commit history",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "floating_notes.newNote",
        "title": "Floating Notes: Create New Note",
        "icon": "$(new-file)"
      },
      {
        "command": "floating_notes.refreshView",
        "title": "Floating Notes: Refresh Notes",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "floating_notes_explorer",
          "title": "Floating Notes Explorer",
          "icon": "resources/floating_notes_icon.svg"
        }
      ]
    },
    "views": {
      "floating_notes_explorer": [
        {
          "id": "noteOutline",
          "name": "Notes Outline"
        }
      ]
    },
    "menus": {
      "view/title":[
        {
          "command": "floating_notes.newNote",
          "title": "$(new-file) New Note",
          "when": "view == noteOutline",
          "group": "navigation"
        },
        {
          "command": "floating_notes.refreshView",
          "when": "view == noteOutline",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.57",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "async-mutex": "^0.5.0"
  }
}
